{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "checkJs": true,
    "allowJs": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@libs/common": ["libs/common/index.js"],
      "@st-api/core": ["packages/core/index.js"],
      "@st-api/firebase": ["packages/firebase/index.js"]
    }
  },
  "exclude": ["dist"]
}
